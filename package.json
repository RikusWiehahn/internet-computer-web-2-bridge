{
  "name": "ic-bridge",
  "author": "Rikus Wiehahn",
  "version": "0.1.0",
  "description": "Internet Computer to Web 2.0 Bridge",
  "keywords": [
    "Internet Computer",
    "Motoko",
    "JavaScript",
    "Canister"
  ],
  "scripts": {
    "start": "node dist/server --env development",
    "dev": "ts-node-dev --no-notify --respawn --transpile-only --inspect -- src/server",
    "build": "tsc --rootDir src/ --outDir dist/ --esModuleInterop true --allowJs true",
    "prebuild": "npm run copy:types",
    "prestart": "npm run copy:types",
    "copy:types": "rsync -avr .dfx/$(echo ${DFX_NETWORK:-'**'})/canisters/** --exclude='assets/' --exclude='idl/' --exclude='*.wasm' --delete src/declarations"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.1",
    "node-fetch": "^2.6.7",
    "ts-node-dev": "^1.1.8"
  },
  "devDependencies": {
    "@dfinity/agent": "0.10.2",
    "@dfinity/candid": "0.10.2",
    "@dfinity/principal": "0.10.2",
    "buffer": "6.0.3",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.177",
    "@types/node": "^16.4.10",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "browserslist": [
    "last 2 chrome version",
    "last 2 firefox version",
    "last 2 safari version",
    "last 2 edge version"
  ]
}
